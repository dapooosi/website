extends layout  

block content  
  h1 Galerie  

  if message  
    p #{message}  
    if imagePath  
      img(src=imagePath, alt='Hochgeladenes Bild')  

  form(method='POST', action='/gallery/upload', enctype='multipart/form-data')  
    input(type='file', name='image', accept='image/*', required)  
    button(type='submit') Bild hochladen
